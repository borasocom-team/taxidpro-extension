<?xml version="1.0"?>
<config>
    <sections>
    	<customer>
    		<groups>
					<address>
	    			<fields>	    				
							
							<taxidpro_enable translate="label comment">
                <label>Enable Webgriffe TaxIdPro</label>
								<comment><![CDATA[TaxIdPro allows your customers to specify if the address is a business one or not. TaxIdPro will ask for VAT Number in case of business address, otherwise will ask for Tax Code.]]></comment>
                <frontend_type>select</frontend_type>
                <source_model>adminhtml/system_config_source_yesno</source_model>
                <sort_order>100</sort_order>
                <show_in_default>1</show_in_default>
                <show_in_website>1</show_in_website>
                <show_in_store>1</show_in_store>
              </taxidpro_enable>
							
							<tax_code_countries translate="label comment">
                <label>Require Tax Code for addresses of this countries only</label>
								<comment><![CDATA[Specify for witch countries the Tax Code field will be mandatory.]]></comment>
                <frontend_type>multiselect</frontend_type>
                <sort_order>101</sort_order>
                <source_model>adminhtml/system_config_source_country</source_model>
                <show_in_default>1</show_in_default>
                <show_in_website>1</show_in_website>
                <show_in_store>1</show_in_store>
              </tax_code_countries>
							<vat_number_countries translate="label comment">
                <label>Require VAT Number for addresses of this countries only</label>
								<comment><![CDATA[Specify for witch countries the VAT Number field will be mandatory.]]></comment>
                <frontend_type>multiselect</frontend_type>
                <sort_order>102</sort_order>
                <source_model>adminhtml/system_config_source_country</source_model>
                <show_in_default>1</show_in_default>
                <show_in_website>1</show_in_website>
                <show_in_store>1</show_in_store>
              </vat_number_countries>
							<tax_code_formats translate="label comment">
								<label>Tax Code accepted formats</label>
								<comment><![CDATA[Valid formats for the Tax Code value. See documentation for further information.]]></comment>
								<frontend_type>text</frontend_type>
								<sort_order>103</sort_order>
								<show_in_default>1</show_in_default>
                <show_in_website>1</show_in_website>
                <show_in_store>1</show_in_store>
							</tax_code_formats>
							<vat_number_formats translate="label comment">
								<label>VAT Number accepted formats</label>
								<comment><![CDATA[Valid formats for the VAT Number value. See documentation for further information.]]></comment>
								<frontend_type>text</frontend_type>
								<sort_order>104</sort_order>
								<show_in_default>1</show_in_default>
                <show_in_website>1</show_in_website>
                <show_in_store>1</show_in_store>
							</vat_number_formats>							
	    			</fields>
	    		</address>
				</groups>
    	</customer>
    </sections>
</config>
 